[Unit]
Description=Mee AI Cognitive Layer Service
After=network.target

[Service]
Type=simple
User=acer
Group=acer
WorkingDirectory=/home/acer/mee_os
ExecStart=/home/acer/mee_os/venv/bin/python3 /home/acer/mee_os/app.py
Restart=always
RestartSec=3

# --- KONFIGURASI KEAMANAN TINGKAT TINGGI (HARDENED) ---
ProtectSystem=strict
ProtectHome=read-only
PrivateTmp=yes
NoNewPrivileges=yes
PrivateDevices=yes
ProtectKernelModules=yes
ProtectKernelTunables=yes
ProtectControlGroups=yes
RestrictNamespaces=yes

[Install]
WantedBy=multi-user.target
